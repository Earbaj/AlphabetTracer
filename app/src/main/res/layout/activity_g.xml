    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_img_v"
        android:layout_width="351dp"
        android:layout_height="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_va"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_ply_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#43A047"
        app:layout_constraintBottom_toBottomOf="@+id/draw_view"
        app:layout_constraintEnd_toEndOf="@+id/img_va"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="@+id/img_va"
        app:layout_constraintTop_toTopOf="@+id/img_va"
        app:layout_constraintVertical_bias="0.048"
        app:srcCompat="@mipmap/ic_speaker" />

</androidx.constraintlayout.widget.ConstraintLayout>
